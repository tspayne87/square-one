{
    "linterOptions": {
        "exclude": [
            "node_modules/**"
        ]
    },
    "defaultSeverity": "warning",
    "extends": [ "tslint-config-standard" ],
    "rules": {
        "space-before-function-paren": false,
        "member-access": [
            true,
            "check-accessor"
        ],
        "ter-indent": [
            true,
            4,
            {
                "SwitchCase": 1
            }
        ],
        "no-internal-module": false,
        "semicolon": [
            true
        ]
    }
}